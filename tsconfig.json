{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "rootDir": "./",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.js"]
}
