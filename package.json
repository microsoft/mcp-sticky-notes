{
  "name": "mcp-sticky-notes",
  "version": "1.0.0",
  "description": "MCP Server for managing colorful sticky notes with Azure Table Storage",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "npx ts-node server.ts",
    "build": "tsc",
    "dev": "npx ts-node --watch server.ts"
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ES2020",
      "moduleResolution": "node"
    }
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.1",
    "@azure/storage-blob": "^12.27.0",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "axios": "^1.12.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "express": "^4.18.2",
    "inquirer": "^8.2.6",
    "node-fetch": "^2.6.7",
    "ora": "^5.4.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/inquirer": "^8.2.10",
    "@types/node-fetch": "^2.6.12",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  }
}
